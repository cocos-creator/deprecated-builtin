border-color = #373737
btn-color = rgb(1,121,177)

:host {
    font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif
    background: rgb(29, 34, 44)
    * {
        outline: none
    }
}



.head {
    width: 100%
    height: 100px
    float: left
    border-bottom: 1px solid #36415C
}

.logo {
    height: 67.5px
    margin-left: 35px
    margin-top: 20px
    float: left
    -webkit-filter: invert(100%)

}

.name {
    line-height: 70px
    color: #FF7C2C
    margin-left: 10px
    text-shadow: #595959 0 1.5px 0
    float: left
}

.prop {
    margin-left: 50px
    margin-top: 20px
    width: 300px
    float: left

    input {
        width: 300px
        height: 35px
        padding: 5px
        color: #BEBEBE
        background: rgb(14,17,22)
        border-radius: 3px
        border: 1px solid border-color
        font-size: 14px

        &:hover {
            border-color: border-color + 20%
        }

        &:active {
            border-color: rgb(30,95,153)
        }

        &:focus {
            border-color: rgb(30,95,153)
        }

        &::-webkit-input-placeholder {
            color: #666
            font-size: 12px
            text-shadow: none
        }
    }

    fire-ui-checkbox {
        float: left
    }

    a {
        float: right
        font-size: 12px
        color: #666
    }
}

.btn {
    width: 130px
    height: 35px
    border-radius: 2px
    background: -webkit-linear-gradient(bottom, btn-color, btn-color+20%)
    border: 0px
    color: white
    float: left
    cursor: pointer
    margin-right: 25px

    &.green {
        background: -webkit-linear-gradient(bottom, #1B8147, #1B8147 + 20%)

        &:hover {
            background: -webkit-linear-gradient(bottom, #1B8147 + 20%, #1B8147 + 40%)
        }

        &:active {
            background: -webkit-linear-gradient(bottom, #1B8147 - 20%, #1B8147)
        }

        &.disabled {
            pointer-events: none
            background: -webkit-linear-gradient(bottom, rgb(26,43,58), rgb(27,46,61))
            color: white - 70%
        }
    }

    &:hover {
        background: -webkit-linear-gradient(bottom, btn-color + 20%, btn-color + 40%)
    }

    &:active {
        background: -webkit-linear-gradient(bottom, btn-color - 20%, btn-color)
    }

    &.disabled {
        pointer-events: none
        background: -webkit-linear-gradient(bottom, rgb(26,43,58), rgb(27,46,61))
        color: white - 70%
    }
}

.registerPanel {
    height: 130px
    width: 100%
    margin-top: 30px
    float: left
    background: rgb(22,29,38)
    border-top: 1px solid border-color

    .registerTip {
        width: 100%
        height: 50px
        line-height: 50px
        text-align: center
    }
}


.login-panel {
    float: left
    position: absolute
    width: 100%
}

.register-panel {
    float: left
    position: absolute
    width: 400px
    height: 300px

    .head {
        height: 60px

        h2 {
            color: orange
        }
    }

    .prop {
        margin: 15 0
        width: 380px
        input {
            width: auto
            height: 30px
            line-height: 30px
            font-size: 12px
            &::-webkit-input-placeholder {
                color: #666
                font-size: 12px
                text-shadow: none
            }
        }

        .err {
            border-color: red
        }

        .reg-tip {
            float: left
            height: 30px
            line-height: 30px
            font-size: 12px
            text-align: right
            color: gray
            padding-right: 15px
        }
    }

    .return-login {
        width: 40px
        height: 40px
        margin: 10px
        float: left
        cursor: pointer
    }

    .center {
        width: 300px
        margin: 40 50
    }
}

.mask {
    width: 100%
    height: 450px
    background: black
    opacity: 0.8
    position: absolute
    left: 0px
    top: 0px
}

.waiting {
    width: 300px
    height: 250px
    position: absolute
    top: 100px
    left: 50%
    margin-left: -150px

    .svg {
        top: 0
        left: 0
        width: 150px
        height: 150px
        stroke-dasharray: 1%, 300%
        stroke-dashoffset: 0%
        stroke: #FF8127
        stroke-linecap:round
        fill: #373734
        margin-left: 75px
    }

    .animate {
        -webkit-animation:animate 3s 0 linear infinite
    }

    @-webkit-keyframes animate {
        0% {
            stroke-dasharray: 0%, 250%
            stroke-dashoffset: 0%
        }
        50% {
            stroke-dasharray: 250%, 250%
            stroke-dashoffset: 0%
        }
        100% {
            stroke-dasharray: 250%, 250%
            stroke-dashoffset: -250%
        }
    }

    .text {
        position: absolute
        left: 0px
        top: 0px
        width: 90px
        text-align: center
        margin-left: 65px
    }
}

.return-btn {
    width: 300px
    height: 40px
    margin-top: 40px
    border: 1px solid border-color
    border-radius: 2px
    cursor: pointer
    background: rgb(16,22,28)
    color: rgb(0,174,255)
    font-size: 14px
    &:hover {
        border-color: border-color + 20%
        color: white
    }

    &:active {
        border-color: rgb(30,95,153)
        color: white
    }

    &:focus {
        border-color: rgb(30,95,153)
        color: white
    }
}

.tips {
    width: 100%
    text-align: center
    font-size: 14px
}

.hide {
    display: none
}

.path {
    &:hover {
        fill: rgb(0,152,255)
    }
}
