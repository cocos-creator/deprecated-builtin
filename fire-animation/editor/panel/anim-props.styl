:host {
    background-color: #555
    margin: 1px
}

fire-ui-toolbar {
    height: 20px
    box-sizing: border-box
}

#event-bar {
    border-top: 1px solid #888
    border-bottom: 1px solid #888
    background-color: #244a61
}

.editing {
    color: #900
}

.prop {
    box-sizing: border-box

    height: 30px
    font-size: 15px
    padding: 6px 10px

    background: #282828
    color: #aaa
}

.prop:nth-child(even) {
    background: #424242
}

.comp {
    font-size: 12px
}
