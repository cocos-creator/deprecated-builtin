:host {
    position: relative

    display: flex
    flex-wrap: nowrap
    align-items: stretch
    flex-direction: row
    overflow: hidden
}

.border {
    position: relative

    border: 1px solid #171717
    background: #333
    box-sizing: border-box
}

.view {
    position: relative
}

#curveview {
    cursor: -webkit-grab
}

