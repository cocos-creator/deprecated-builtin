:host {
    width: 500px
    height: 300px
    border: 1px solid #555
    background-color: #474747
    box-shadow: 0 0 15px 2px rgba(0,0,0,0.5)
    z-index: 999
    padding-right: 1px
    padding-bottom: 1px
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
    cursor: default

    position: relative
    display: block
    top: 30px
    margin: auto
}

.title {
    border-bottom: 1px solid black
    background: rgb(71, 71, 71)
    height: 35px
    font-size: 12px
    line-height: 35px
    padding-left: 15px
    text-align: left
    color: #ABABAB
}

.left {
    width: 129px
    background: #555555
    float: left
    border-bottom: 1px solid black;
    .beziers {
        width: 100%
        float: left
        margin: 0px
        padding: 0px
        height: 264px
        border-left: 1px solid black;
        li {
            list-style: none
            font-size: 12px
            line-height: 24px
            height: 24px
            text-align: right
            padding-right: 15px
            background: #424242
            border-bottom: 1px solid #616161
            border-right: 1px solid #3b3b3b
            color: #A9A9A9

            &[select] {
                border-left: 1px solid red
                background: rgb(51,51,51) - 40%
            }
        }
    }
}

.right {
    width: 370px
    float: left
    border-bottom: 1px solid black
    padding-right: 1px
    .tobar {
        height: 35px
        width: 100%
        float: left
    }
    .curvePanel {
        position: relative
        box-shadow: inset 0 0 8px 2px rgba(0,0,0,0.2)
        width: 100%
        border: 1px solid #171717
        height: 264px
        background: rgb(51,51,51)
        float: left
        border-bottom: none

        #curve {
            width: 200px
            height: 200px
            background: gray
            margin-left: 85px
            margin-top: 30px
            float: left
            border-left: 1px solid black
            border-top: 1px solid black
            background: url('../img/grid.png')

        }

        #svg {
            width: 100%
            height: 100%
            left: 0
            position: absolute
        }

        .preview{
            width: 200px
            height: 200px
            left: 85px
            top: 30px
            position: relative;
            pointer-events: none

            .rowline {
                width: 200px
                height: 1px
                position: absolute
                bottom: 0px
                right: 0px
                background: white
                opacity: 0.4
            }

            .colline {
                width: 1px
                height: 200px
                position: absolute
                left: 0px
                top: 0px
                background: white
                opacity: 0.4
            }
            .radiu {
                width: 8px
                height: 8px
                background: #76e309
                border-radius: 4px
                float: right
                margin-right: -15px
                margin-top: -4px
            }
        }
    }
}

#btnGrp {
    box-sizing: border-box
    position: relative
    font-size: 10px
    margin-top: 5px
    display: inline-block
    background: #232323
    border-radius: 2px
    border: 1px solid black

    .btn_item {
        display: inline-block
        box-sizing: border-box
        font-size: 10px
        border: none
        padding: 4px
        border-right: 1px solid #232323
        background: #424242
        color: rgb(170,170,170)
        &:hover {
            background: #5E5E5E + 20%
        }
        &:last-child {
            border-right: none
        }
        &:active {
            background: #5E5E5E - 40%
            color: #DFDFDF - 20%
        }

        &[active] {
            background: #232323
        }
    }
}

.data {
    width: 100%
    height: 20px
    float: left
    bottom: 0px
    position: absolute
    text-align: center
    font-size: 12px
    line-height: 20px
}

.point {
    cursor: all-scroll
}

.eventNone {
    pointer-events: none;
}
