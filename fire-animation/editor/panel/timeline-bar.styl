:host {
    position: relative
    height: 40px
    background-color: #171717
    box-shadow: 0px 0px 15px 2px rgba(0,0,0,0.5)
}

.event-bar {
    box-sizing: border-box
    position: absolute
    bottom: 0px
    left: 0px
    right: 0px
    height: 20px
    background-color: rgba(0, 84, 136, 0.5);

    border-top: 1px solid #888
    border-bottom: 1px solid #888
}
