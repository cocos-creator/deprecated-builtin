:host {
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

    display: flex
    flex-direction: column
    flex-wrap: nowrap
    align-items: stretch

    font-size: 12px
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif

    margin-top: 10px
    margin-left: 3px
    margin-right: 3px
    margin-bottom: 3px

    color: #ddd
    cursor: default
    outline: none
}

span.space {
    width: 5px
    height: 5px
}
