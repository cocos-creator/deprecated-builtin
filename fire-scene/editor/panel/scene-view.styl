:host {
    display: block

    &(:focus) {
        outline: 0
    }
}

svg {
    position: absolute
    top: 0px
    right: 0px
    bottom: 0px
    left: 0px
}

#grids {
    shape-rendering: crispEdges
}

#gizmos {
    shape-rendering: geometricPrecision
}

canvas {
    position: absolute
    top: 0px
    right: 0px
    bottom: 0px
    left: 0px
}

